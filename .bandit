[bandit]
# Bandit configuration for security scanning

# Exclude test files from certain security checks
exclude_dirs = ["tests", "test_*", "*test*"]

# Skip certain test directories entirely
skips = ["B101", "B601"]  # Skip assert_used, shell injection in tests

# Test-specific exclusions
tests = ["B101", "B601", "B602", "B603", "B604", "B605", "B607"]
